<Window x:Class="AutoPhotoEditor.ProductAddResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPhotoEditor"
        mc:Ignorable="d"
        Title="Wynik dodania zdjęcia"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Closed="Window_Closed" KeyDown="Window_KeyDown">

    <Grid Margin="20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Make both columns Auto so they size to content and sit next to each other -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title centered across both columns -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Dodano zdjęcie do towaru"
                   FontWeight="Bold"
                   Margin="0,0,0,5"
                   TextAlignment="Center"
                   FontSize="15" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Kod towaru:" FontWeight="Bold" Margin="0,15,8,5" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Code}" Margin="0,15,0,5" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Nazwa:" FontWeight="Bold" Margin="0,0,8,5" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Name}" Margin="0,0,0,5" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="EAN:" FontWeight="Bold" Margin="0,0,8,5" />
        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EAN}" Margin="0,0,0,5" />

        <!-- Buttons centered, spanning both columns -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0"
                    Click="Ok_Click" Style="{StaticResource SuccessButtonStyle}" />
            <Button Content="Zobacz kartę towaru" Margin="0,0,10,0"
                    Click="OpenList_Click" Style="{StaticResource PrimaryButtonStyle}" />
            <Button Content="Usuń zdjęcie z karty"
                    Click="Cancel_Click" Style="{StaticResource DangerButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>